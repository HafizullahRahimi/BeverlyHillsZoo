@model IEnumerable<HabitatWater>

@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Index";
}

<div class="">
    <a asp-action="Create" class="btn btn-success float-end me-3">
        <i class="fa-solid fa-plus me-2"></i>Create New
    </a>
    <h1 class="fs-2 text-black">Habitat: Water</h1>
</div>
<table class="table table-striped caption-top">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DivingDepth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DivingDepth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.IsDeleted
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info mx-2">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success mx-2">Details</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger mx-2">Delete</a> |

                    <a asp-action="Enable" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary mx-2">Enable</a>
                </td>
            </tr>
        }
    </tbody>
</table>
